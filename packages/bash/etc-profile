for i in @MININIX_PREFIX@/etc/profile.d/*.sh; do
	if [ -r $i ]; then
		. $i
	fi
done
unset i

# Source etc/bash.bashrc and ~/.bashrc also for interactive bash login shells:
if [ "$BASH" ]; then
        if [[ "$-" == *"i"* ]]; then
                if [ -r /data/data/com.mininix/files/usr/etc/bash.bashrc ]; then
                        . /data/data/com.mininix/files/usr/etc/bash.bashrc
                fi
                if [ -r /data/data/com.mininix/files/home/.bashrc ]; then
                        . /data/data/com.mininix/files/home/.bashrc
                fi
        fi
fi
